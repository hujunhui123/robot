<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">

    <!--加载数据资源属性文件 -->
    <bean id="propertyConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:properties/resourse.properties</value>
            </list>
        </property>
    </bean>
    <!-- 使用注解开发，不用配置controller，需要配置一个组件扫描器 -->
    <context:component-scan base-package="hust.plane.web.controller"/>

    <!-- 配置注解驱动 -->
    <mvc:annotation-driven/>
    <bean id="freeMarkerConfigurer" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value=""></property>
        <property name="freemarkerSettings">
            <props>
                <prop key="template_update_delay">0</prop>
                <prop key="default_encoding">UTF-8</prop>
                <prop key="locale">zh_CN</prop>
                <prop key="url_escaping_charset">UTF-8</prop>
                <prop key="boolean_format">true,false</prop>
                <prop key="datetime_format">yyyy-MM-dd HH:mm:ss</prop>
                <prop key="date_format">yyyy-MM-dd</prop>
                <prop key="time_format">HH:mm:ss</prop>
                <prop key="number_format">0.######</prop>
                <prop key="whitespace_stripping">true</prop>
                <prop key="auto_import">/WEB-INF/ftl/spring.ftl as s</prop>
            </props>
        </property>
    </bean>
    <bean id="freeMarkerViewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
        <property name="cache" value="true"></property>
        <property name="prefix" value="/WEB-INF/jsp/"></property>
        <property name="suffix" value=".html"></property>
        <property name="contentType" value="text/html;charset=UTF-8"></property>
        <property name="requestContextAttribute" value="request"/>
    </bean>
    <!-- 静态资源映射 -->
    <mvc:resources location="/res/js/" mapping="/js/**" cache-period="3600"/>
    <mvc:resources location="/res/" mapping="/res/**" cache-period="3600"/>
    <mvc:resources location="/res/css/" mapping="/css/**" cache-period="3600"/>
    <mvc:resources location="/res/i/" mapping="/i/**" cache-period="3600"/>
    <mvc:resources location="/res/fonts/" mapping="/fonts/**" cache-period="36000"/>
    <mvc:resources location="/res/media/" mapping="/media/**" cache-period="3600"/>
    <!-- 配置文件上传，如果没有使用文件上传可以不用配置，当然如果不配，那么配置文件中也不必引入上传组件包 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!-- 默认编码 -->
        <property name="defaultEncoding" value="utf-8"/>
        <!-- 文件大小最大值 -->
        <property name="maxUploadSize" value="10485760000"/>
        <!-- 内存中的最大值 -->
        <property name="maxInMemorySize" value="409600000"/>
    </bean>
    <!-- 拦截器配置 -->
    <mvc:interceptors>
        <mvc:interceptor>
            <!--进行拦截的路径-->
            <mvc:mapping path="/**"/>
            <!--不进行拦截的路径-->
            <mvc:exclude-mapping path="/res/js/**"/>
            <mvc:exclude-mapping path="/res/css/**"/>
            <mvc:exclude-mapping path="/res/i/**"/>
            <mvc:exclude-mapping path="/res/img/**"/>
            <mvc:exclude-mapping path="/js/**"/>
            <mvc:exclude-mapping path="/upload/**"/>
            <mvc:exclude-mapping path="/fonts/**"/>
             <mvc:exclude-mapping path="/res/fonts/**"/>
            <mvc:exclude-mapping path="/media/**"/>
            <mvc:exclude-mapping path="/res/assets/**"/>
            <bean class="hust.plane.web.interceptor.BaseInterceptor"></bean>
        </mvc:interceptor>
    </mvc:interceptors>


</beans>